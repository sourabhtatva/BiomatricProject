<UserControl x:Class="CheckInKiosk.TakePhoto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800" Background="#121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Webcam Feed with Face Detection -->
        <Border Grid.Row="1" 
                Grid.Column="0" 
                BorderBrush="#3498DB" 
                BorderThickness="2"
                Margin="20"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Image x:Name="WebcamFeed" 
                   Width="350" 
                   Height="340" 
                   Stretch="UniformToFill"/>
        </Border>

        <!-- TextBlock and Capture Button -->
        <StackPanel Grid.Row="2" 
                    Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Vertical">
            <TextBlock Text="Please capture your photo" 
                       TextAlignment="Center" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="10,0,10,10"/>

            <!-- Verification Message -->
            <TextBlock x:Name="VerificationMessage" 
                       Foreground="White" 
                       FontSize="16" 
                       Margin="10,0,10,10" 
                       Visibility="Collapsed"
                       TextAlignment="Center"/>

            <!-- Loading Indicator -->
            <ProgressBar x:Name="LoadingIndicator" 
                         IsIndeterminate="True" 
                         Height="20" 
                         Width="200" 
                         Margin="10,0,10,10" 
                         Visibility="Collapsed"
                         HorizontalAlignment="Center"
                         Foreground="#3498DB"/>

            <!-- Error Message Panel -->
            <StackPanel x:Name="ManualCheckInPanel" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="600" 
                        Visibility="Collapsed">
                <TextBlock TextAlignment="Center" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Regular" 
                           Margin="0,0,0,20" 
                           TextWrapping="Wrap">
                    The details you entered are incorrect. You can proceed with manual check-in or contact our agent for assistance.
                </TextBlock>
                <Button Content="Okay" 
                        Width="150" 
                        Height="50" 
                        Background="White" 
                        Foreground="Black" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Click="OnOkayClick" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
