<UserControl x:Class="CheckInKiosk.TakePhoto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800" Background="#121212">
    <Grid>
        <!-- Define a single row and column to center content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Center Content within the Grid -->
        <Border Grid.Row="1" 
                Grid.Column="0" 
                BorderBrush="#3498DB" 
                BorderThickness="2"
                Margin="20"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Image x:Name="ImagePreview" 
                   Width="350" 
                   Height="340" 
                   Stretch="UniformToFill"/>
        </Border>

        <!-- TextBlock and Capture Button -->
        <StackPanel Grid.Row="2" 
                    Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Vertical">
            <TextBlock Text="Please capture your photo" 
                       TextAlignment="Center" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="10,0,10,10"/>

            <!-- Capture Button -->
            <Button Content="Capture Photo" 
                    Foreground="White" 
                    Background="#E74C3C" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Margin="10,0,10,10"
                    Padding="10,5"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OnCaptureClick">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E74C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Margin" Value="10,0,10,10"/>
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#C0392B" Offset="0"/>
                                    <GradientStop Color="#E74C3C" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#E74C3C" Offset="0"/>
                                            <GradientStop Color="#C0392B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Verification Message -->
            <TextBlock x:Name="VerificationMessage" 
                       Foreground="White" 
                       FontSize="16" 
                       Margin="10,0,10,10" 
                       Visibility="Collapsed"
                       TextAlignment="Center"/>

            <!-- Loading Indicator -->
            <ProgressBar x:Name="LoadingIndicator" 
                         IsIndeterminate="True" 
                         Height="20" 
                         Width="200" 
                         Margin="10,0,10,10" 
                         Visibility="Collapsed"
                         HorizontalAlignment="Center"
                         Foreground="#3498DB"/>

            <!-- Boarding Pass Details -->
            <Border Padding="10" 
                    Background="#34495E" 
                    Visibility="Collapsed" 
                    x:Name="BoardingPassPanel" 
                    Margin="10"
                    CornerRadius="8"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Boarding Pass" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="5"/>
                    <TextBlock x:Name="BoardingPassDetails" 
                               Foreground="White" 
                               FontSize="16" 
                               Margin="5"/>
                    <Button Content="Finish" 
                            Foreground="White" 
                            Background="#27AE60" 
                            FontSize="16" 
                            FontWeight="Bold"
                            Margin="10"
                            Padding="10,5"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnFinishClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Width" Value="200"/>
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2ECC71" Offset="0"/>
                                            <GradientStop Color="#27AE60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#27AE60" Offset="0"/>
                                                    <GradientStop Color="#2ECC71" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
