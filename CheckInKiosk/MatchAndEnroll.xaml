<UserControl x:Class="CheckInKiosk.MatchAndEnroll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CheckInKiosk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Matching photo with ID card..." Foreground="White" FontSize="20" Margin="10"/>
        <Button Content="Start Matching" Foreground="White" Background="Gray" Margin="10" Click="OnStartMatchingClick"/>
        <TextBlock x:Name="ResultText" Foreground="White" FontSize="16" Margin="10"/>
    </StackPanel>
</UserControl>
